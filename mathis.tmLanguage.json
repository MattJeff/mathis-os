{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MATHIS",
  "scopeName": "source.mathis",
  "patterns": [
    { "include": "#comments" },
    { "include": "#annotations" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mathis",
          "match": "//.*$"
        },
        {
          "name": "comment.block.mathis",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.mathis",
          "match": "@(module|module_description|block|intent|depends|effects|chunk|example|deprecated|version|author|since|see|param|return|throws)\\b",
          "captures": {
            "0": { "name": "entity.name.tag.annotation.mathis" }
          }
        },
        {
          "name": "meta.annotation.custom.mathis",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*",
          "captures": {
            "0": { "name": "entity.name.tag.annotation.custom.mathis" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mathis",
          "match": "\\b(if|else|match|for|while|loop|return|break|continue|in)\\b"
        },
        {
          "name": "keyword.declaration.mathis",
          "match": "\\b(func|let|const|type|struct|enum|import|export|module)\\b"
        },
        {
          "name": "keyword.operator.mathis",
          "match": "\\b(and|or|not|is|as)\\b"
        },
        {
          "name": "constant.language.mathis",
          "match": "\\b(true|false|null|None|Some|Ok|Err)\\b"
        },
        {
          "name": "variable.language.mathis",
          "match": "\\b(self|this|super)\\b"
        },
        {
          "name": "storage.modifier.mathis",
          "match": "\\b(pub|priv|mut|async|await)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.mathis",
          "match": "\\b(String|Int|Float|Bool|Void|Any|Map|List|Set|Result|Option|Entity|Error|Date|DateTime|AuthContext)\\b"
        },
        {
          "name": "entity.name.type.mathis",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.definition.mathis",
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.declaration.function.mathis" },
            "2": { "name": "entity.name.function.mathis" }
          }
        },
        {
          "name": "meta.function.call.mathis",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.call.mathis" }
          }
        },
        {
          "name": "support.function.builtin.mathis",
          "match": "\\b(store\\.create|store\\.get|store\\.find|store\\.update|store\\.delete|store\\.count|hashPassword|verifyPassword|generateJWT|verifyJWT|now|today|length|first|last|map|filter|reduce|forEach|push|pop|contains|toString|toNumber|toLowerCase|toUpperCase|trim|substring|split|join|round|ceil|floor|abs|min|max|sum|avg|parseDate|diffDays|addDays)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mathis",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mathis",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.mathis",
              "match": "\\{[^}]*\\}",
              "captures": {
                "0": { "name": "variable.other.mathis" }
              }
            }
          ]
        },
        {
          "name": "string.quoted.single.mathis",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.mathis",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.mathis",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.mathis",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.mathis",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.mathis",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.arithmetic.mathis",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.mathis",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arrow.mathis",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.optional.mathis",
          "match": "(\\?\\?|\\?\\.)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.mathis",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.mathis",
          "match": "[;,]"
        },
        {
          "name": "punctuation.bracket.mathis",
          "match": "[\\[\\]\\{\\}\\(\\)]"
        },
        {
          "name": "punctuation.accessor.mathis",
          "match": "\\."
        }
      ]
    }
  }
}
